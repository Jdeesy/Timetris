source 'https://rubygems.org'

# Google API and OmniAuth Clients
gem 'google-api-client', :require => 'google/api_client'
gem "omniauth-google-oauth2", "~> 0.2.1"

# Rest client for oauth token refresh
gem 'rest-client'

gem 'rails', '4.2.1'
gem 'pg'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc
gem 'rake'
gem 'bootstrap-sass'

group :development, :test do
  gem 'rspec-rails'
  gem 'simplecov'
  gem 'database_cleaner'
  gem 'factory_girl'
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

group :development do
  gem 'better_errors'
end

