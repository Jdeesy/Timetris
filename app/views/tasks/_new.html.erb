<div class="col-xs-12 col-sm-6 col-md-6 name input-group">
	<%= form_for @task, :url => tasks_path, :html => {class: "form-inline task-name-form"} do |f| %>
	  <%= f.text_field :name, class: "form-control", placeholder: "Enter a new task", minlength: "4", maxlength: "140", required: true, autofocus: true %>
	  <span class="input-group-btn">
		  <%= f.submit class: "btn btn-default", title: "create task" %>
	  </span>
	<% end %>
</div>