<div class="panel panel-info task">
	<div class="panel-heading">
		<div class="col-xs-12 col-sm-6 col-md-6 name">
			<h5><%= task.name %></h5>
		</div>
		<div class="col-xs-12 col-sm-6 col-md-6 input-group date form_date" data-date="" data-date-format="dd MM yyyy" data-link-field="due_date" data-link-format="yyyy-mm-dd">
			<span class="input-group-addon"><span>Due:</span></span>
			<input class="form-control" size="16" type="text" value="" readonly>
			<span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
			<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
		</div>
		<input type="hidden" id="due_date" value="" />
	</div>
  <div class="panel-body">
	  <div class="col-xs-12 col-sm-6 col-md-6 option">
  		<div class="col-xs-4 col-sm-4 col-md-4 option">
	  		<h5>Timebox: </h5>
  		</div>
  		<div class="col-xs-8 col-sm-8 col-md-8 option">
  			<h5>
		  		<a href="#" class="timebox-subtract">
						<span class="glyphicon glyphicon-minus-sign"></span>
					</a>
				</h5>
	  		<h4>
	  			<span class="label label-primary">30 min</span>
	  		</h4>
	  		<h5>
		  		<a href="#" class="timebox-add">
						<span class="glyphicon glyphicon-plus-sign"></span>
					</a>
				</h5>
			</div>
	  </div>
	  <div class="col-xs-12 col-sm-6 col-md-6 option">
  		<div class="col-xs-4 col-sm-4 col-md-4 option">
	  		<h5>Priority: </h5>
  		</div>
  		<div class="col-xs-8 col-sm-8 col-md-8 option">
  			<h5>
		  		<a href="#" class="timebox-subtract">
						<span class="glyphicon glyphicon-minus-sign"></span>
					</a>
				</h5>
	  		<h4>
	  			<span class="label label-primary">Medium</span>
	  		</h4>
	  		<h5>
		  		<a href="#" class="timebox-add">
						<span class="glyphicon glyphicon-plus-sign"></span>
					</a>
				</h5>
			</div>
	  </div>	  
  </div>
</div>