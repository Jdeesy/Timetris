	<div class="panel panel-default task" id="<%= task.id %>">

	  <div class="panel-heading">
	  	
			<h3 class="list-group-item-heading task-header col-md-6 col-xs-12">
				<div class="name">
					<%= task.name %>
					<a href="#" class="task-edit">
						<span class="glyphicon glyphicon-pencil"></span>
					</a>
				</div>
		  	<a href="tasks/<%= task.id %>" class="task-description">
		  		<span class="glyphicon glyphicon-list-alt"></span>
	  		</a>
		  </h3>

		  <div class="buttons col-md-6 col-xs-12">
			  <%= button_to "Start Task", start_task_path(task), class: "btn btn-default pull-right", method: :patch %>
				<%= button_to "Remove Task", task_path(task), class: "btn btn-default pull-right", method: :delete, data: { confirm: "Are you sure?" } %>
			</div>

	  </div>

	  <table class="table">
	  	<tr>

	      <td>
	      	<p>Timebox:
						<a href="#" class="timebox-subtract">
							<span class="glyphicon glyphicon-minus"></span>
						</a>
						<span class="label label-primary">
							<span class="time-box"><%= task.time_box %></span> min
						</span>
						<a href="#" class="timebox-add">
							<span class="glyphicon glyphicon-plus"></span>
						</a>
					</p>
	      </td>

	      <td>
	      	<p>Priority:
						<a href="#" class="priority-subtract">
							<span class="glyphicon glyphicon-minus"></span>
						</a>
						<span class="label label-primary">
							<span class="priority"><%= task.priority %></span>
						</span>
						<a href="#" class="priority-add">
							<span class="glyphicon glyphicon-plus"></span>
						</a>
					</p>
      	</td>

	      <td>
	      	<%= form_for task do |f| -%>
				  <% f.label :due_date %>
				  <%= f.datetime_local_field :due_date, ampm: true, :order => [:month, :day, :year, :hour, :minute] %>
				  <%= f.submit class: "btn btn-default" %>
				<% end %>
      	</td>

      </tr>
	  </table>
	</div>