<% if @tasks %>

  <table>
    <tr>
      <%= render 'task_reports/headers' %>
    </tr>
    <% @tasks.each do |report| %>
      <tr>
        <%= render partial: "task_reports/task_row", locals: {report: report} %>
      </tr>
    <% end %>
  </table>

<% else %>

  Go Complete Some Tasks!

<% end %>