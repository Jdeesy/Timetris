<%= render partial: "tasks/new" %>

<table>
  <tr>
    <%= render 'tasks/headers' %>
    <td></td>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <%= render partial: "tasks/task_row", locals: {task: task} %>
      <%= render partial: "tasks/start_task", locals: {task: task} %>
      <%= render partial: "tasks/remove_task", locals: {task: task} %>
    </tr>
  <% end %>
</table>
