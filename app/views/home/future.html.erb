<% if @events.any? %>
  <h2>Today's Events</h2>
  <% @events.each do |event| %>
  <% if event[0] == :google %>
    <li class="list-group-item" style="background-color:lightblue"> GOOGLE EVENT:
  <% else %>
    <li class="list-group-item" style="background-color:lightyellow">
  <% end %>
    <%= format_local_time(event[1]) %>
    <% if event[2] == nil %>
      No Event Title
    <% else %>
      <%= event[2] %>
    <% end %>
    <br>
  <% end %>
  </li>
  <% else %>
    <h2>Your future is uncertain...</h2>
    <p>You have no upcoming Google Calendar events or Timetris tasks to complete. Add tasks by clicking on "My Tasks" in the upper right-hand corner!</p>
<% end %>



